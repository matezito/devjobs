<main class="contenedor">
    <form action="/auth/signup" method="post" class="default-form">
        <div class="campo">
            <label for="">Nombre</label>
            <input type="text" name="name" placeholder="Nombre">
        </div>
        <div class="campo">
            <label for="">Email</label>
            <input type="email" name="email" placeholder="Email">
        </div>
        <div class="campo">
            <label for="">Contraseña</label>
            <input type="password" name="password" placeholder="Contraseña">
        </div>
         <div class="campo">
             <label for="">Repetir contraseña</label>
            <input type="password" name="confirmPassword" placeholder="Repetir Contraseña">
        </div>
        <div class="campo acciones">
            <a href="/signin">Iniciar sesión</a>
        </div>
        <div class="campo">
            <input type="submit" value="Crear cuenta" class="btn btn-azul">
        </div>
    </form>
</main>
