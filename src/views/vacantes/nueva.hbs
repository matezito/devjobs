;<main class="contenedor">
    <form action="/vacantes/nueva" method="post" class="default-form">

        <h3>información general</h3>
        <div class="campo">
            <label for="">Titulo</label>
            <input type="text" name="title" placeholder="Titulo de la vacante" required>
        </div>
        <div class="campo">
            <label for="">Empresa</label>
            <input type="text" name="company" placeholder="Empresa">
        </div>
        <div class="campo">
            <label for="">Ubicación</label>
            <input type="text" name="location" placeholder="Ubicación" required>
        </div>
        <div class="campo">
            <label for="">Salario (USD)</label>
            <input type="text" name="salary" placeholder="Salario">
        </div>
        <div class="campo">
            <label for="">Contrato</label>
            <select name="contract">
                <option value="" disabled selected>Seleccione una opción</option>
                <option value="Full Time">Full Time</option>
                <option value="Part Time">Part Time</option>
                <option value="Freelance">Freelance</option>
                <option value="Temporal">Temporal</option>
                <option value="Pasantia">Pasantia</option>
                <option value="Indefinido">Indefinido</option>
            </select>
        </div>

        <h3>Descripción del puesto</h3>
        <div class="campo descripcion">
            <label for="">Descripción</label>
            <input type="hidden" id="x" name="description">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills a}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" class="btn btn-azul" value="Publicar">
        </div>

    </form>
</main>